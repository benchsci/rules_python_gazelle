load("@rules_python//python:defs.bzl", "py_binary", "py_library", "pytest")

py_library(
    name = "__init__",
    srcs = ["__init__.py"],
    deps = [":foo"],
)

py_binary(
    name = "__main__",
    srcs = ["__main__.py"],
    main = "__main__.py",
)

pytest(
    name = "__test__",
    srcs = ["__test__.py"],
    main = "__test__.py",
    deps = [
        ":__init__",
        ":__main__",
    ],
)

py_library(
    name = "foo",
    srcs = ["foo.py"],
)
